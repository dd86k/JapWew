<Page x:Class="JapWew.DiagnosisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JapWew"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="DiagnosisPage">

    <Grid Background="White">
        <StackPanel Height="50" Margin="0" VerticalAlignment="Top" Orientation="Horizontal">
            <Label x:Name="DiagnosisLabel" Content="Diagnosis" FontSize="30" HorizontalAlignment="Left" Margin="50,0,0,0"/>
        </StackPanel>
        <Grid HorizontalAlignment="Stretch" Margin="0,55,0,0" VerticalAlignment="Stretch">
            <Label HorizontalAlignment="Left" VerticalAlignment="Top"
                   Width="Auto" Height="Auto" Margin="10,0,0,0" FontSize="16">
                Input Character
            </Label>
            <TextBox x:Name="CharacterTextBox" Width="40" Height="40" Margin="45,31.28,0,0" FontSize="20" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" MaxLength="1" TextChanged="CharacterTextBox_TextChanged"/>

            <StackPanel HorizontalAlignment="Right" Width="200" CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True">
                <Label>Unicode number</Label>
                <TextBox x:Name="UnicodeNumberTextBox" IsReadOnly="True">U+0000</TextBox>
                <Label>HTML code</Label>
                <TextBox x:Name="HtmlCodeTextBox" IsReadOnly="True">&amp;#0;</TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
